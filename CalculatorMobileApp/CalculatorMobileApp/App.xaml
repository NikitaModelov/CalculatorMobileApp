<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorMobileApp.App">
    <Application.Resources>
        <!--Color-->
        <Color x:Key="AcceptColor">#FF327DF0</Color>

        <Style TargetType="Label" x:Key="BaseLabelStyle">
            <Setter Property="BackgroundColor" Value="Transparent"/>
        </Style>
        <Style x:Key="Separator" TargetType="BoxView">
            <Setter Property="HeightRequest" Value="1" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="Color" Value="{StaticResource AcceptColor}" />
            <Setter Property="Margin" Value="0, 5, 0, 5" />
            <Setter Property="Opacity" Value="0.5" />
        </Style>
        <Style x:Key="NumbersField" TargetType="Label" BasedOn="{StaticResource BaseLabelStyle}">
            <Setter Property="HorizontalOptions" Value="End"/>
            <Setter Property="VerticalOptions" Value="End"/>
            <Setter Property="Padding" Value="16,0,16,0"/>
            <Setter Property="LineBreakMode" Value="NoWrap"/>
        </Style>

        
    </Application.Resources>
</Application>